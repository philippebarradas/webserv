user www-data;

events {}
http{
server{
	server_name hello4;

	listen 7778;
	autoindex on;

	root /tmp;

	error_page 404 404.html;

	location /404.html {
		alias /tmp/test;
	}
}

server{
	server_name hello12 hello55;
	listen 7775;

	autoindex on;
	root /home/user42/Bureau/webserv/www;

	index form.html;
	dav_methods DELETE;

	location /test {
		root /home/user42/Bureau/webserv;
	}
	location /error_page {
		index my_index.html;
	}
	location ~ \.php$ {
		fastcgi_pass unix:/var/run/php/php7.2-fpm.sock;
		fastcgi_index hello.php;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		include /etc/nginx/fastcgi_params;
	}
}}
