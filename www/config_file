
server{
	server_name localhost;
	listen 8001;

	autoindex on;
	root /home/user42/Bureau/webserv/www;

	client_max_body_size 10;

	accepted_methods	GET POST;

	location / {
		cgi .php /usr/bin/php-cgi;
	}

	location /hello.html {
		error_page 502 /env.php;
		root /home/user42/Bureau/webserv/www/test;
		cgi .html /usr/bin/php-cgie;
	}
}
