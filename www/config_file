
server{
	server_name localhost;
	listen 8004;

	autoindex on;
	root /home/user42/Bureau/webserv/www;
	cgi .php /usr/bin/php-cgi;
	cgi .py /usr/bin/python2.7;

	client_max_body_size 100000;

	accepted_methods	GET POST;

	location / {
		index cookie.php;

		accepted_methods	GET POST DELETE;
	}

}

