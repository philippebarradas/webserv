server{
	server_name server_test;
	listen 8042;

	accepted_methods	GET POST DELETE;
	autoindex on;
	cgi .php /usr/bin/php-cgi;
	root /home/user42/Bureau/webserv/www/test;
}

server{
	server_name localhost hello;
	listen 8020;

	client_max_body_size 8000000000000;
	autoindex off;
	root /home/user42/Bureau/webserv/www;

	location / {
		cgi .php /usr/bin/php-cgi;
		accepted_methods	GET POST;
		index index.html;
	}

	location /noindex {
		autoindex on;
		accepted_methods	GET POST;
		index not_exist.html;
	}

	location /all_test {
		cgi .py /usr/bin/python3.7;
		cgi .php /usr/bin/php-cgi;
		root /home/user42/Bureau/webserv/www/test;
		accepted_methods	GET POST;
		autoindex on;
	}

	location /delete_loc {
		root /home/user42/Bureau/webserv/www/del;
		accepted_methods	DELETE;
	}

	location /no_perm {
	}
}

server {

}
