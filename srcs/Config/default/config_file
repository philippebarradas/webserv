
server{
	server_name localhost;
	listen 8004;

	autoindex on;

	root /home/user42/Bureau/webserv/www;


	accepted_methods	GET POST;
	cgi .php /usr/bin/php-cgi;
	cgi .html /usr/bin/php-cgi;
	error_page 404 /env.php;

	location / {
		index no.html;
	}


	location /404.html {
		root /tmp/test;
	}

	location /test/403/bad_dir_perm{
		index hello_good_perm.txt;
	}
}
