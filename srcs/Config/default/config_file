
server{
	server_name localhost;
	listen 8001;

	autoindex on;

	root /tmp/test;


	accepted_methods	GET;

	location / {
		index form.html;
		cgi .php /usr/bin/php-cgi;
	}

	location /salutlol {
		autoindex	on;
	}


	location /404.html {
		root /tmp/test;
	}

	location /test/403/bad_dir_perm{
		index hello_good_perm.txt;
	}
}
