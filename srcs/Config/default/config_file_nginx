user www-data;

events {}
http{
server{
    server_name hello4;

    listen 7778;
    autoindex on;
	client_max_body_size 1M;
    root /home/user42/Bureau/webserv/srcs/Config/default/html_page;
    error_page 400 /400_bad_request.html;
}


server{
    server_name hello12 hello55;
    listen 7777;

    autoindex on;
    root /home/user42/Bureau/webserv/srcs/Config/default/html_page;

    index index.html;
    dav_methods DELETE;

    location ~ .php$ {
        fastcgi_pass unix:/var/run/php/php7.2-fpm.sock;
        fastcgi_index hello.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include /etc/nginx/fastcgi_params;
    }
}}