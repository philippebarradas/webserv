user www-data;

events {}
http{
server{
	server_name hello4;

	listen 7778;
	autoindex on;
	index sdsda;

	location /hello.a {
		alias /home/user42/;
	}


	location /hello.a/salut {
		alias /home/;
	}

	location /hello.a/salut/pout {
		alias /;
	}

	location /test {
		autoindex off;
	}



	location /error_page {
		index my_index.html;
	}
	location ~ \.php$ {
		fastcgi_pass unix:/var/run/php/php7.2-fpm.sock;
		fastcgi_index hello.php;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		include /etc/nginx/fastcgi_params;
	}
}}
