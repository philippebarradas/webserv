user user42;

events {}
http{
server{
	server_name localhost;
	listen 7778;

	autoindex on;

	location / {
		error_page 404 /404.htmll;
		index	no;
		root /tmp;
	}

	location /lol {
		error_page 404 rigolo;
	}

	location /rigolo {
		error_page 404 /404.html;
		index	no;
		root /tmp;
	}

	location /404.htmll {
		error_page 404 /404.html;
		index lol;
		root /tmp/test;
	}

	location /404.html {
		error_page 404 /404.html;
		index lol;
		root /tmp/test;
	}


	location /salut {
		root yo;
	}
}

server{
	server_name hello12 hello55;
	listen 7777;

	autoindex on;
	root /home/user42/Bureau/webserv/www/test/403/bad_dir_perm;

	index form.html;
	dav_methods DELETE;

	location /error_page {
		index my_index.html;
	}

	location /test/403/bad_dir_perm{
		index hello_good_perm.txt;
	}

	location ~ \.php$ {
		fastcgi_pass unix:/var/run/php/php7.2-fpm.sock;
		fastcgi_index hello.php;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		include /etc/nginx/fastcgi_params;
	}
}}
